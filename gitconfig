[advice]
    ignoredHook = false
[core]
	hooksPath = no-hooks
	editor = nvim
    commentChar = !
[alias]
  u = !git f && git branch -f review origin/review
  f = fetch -p
  p = push --no-verify
  p-u = !git p -u origin $(git rev-parse --abbrev-ref HEAD)
  push-u = p-u
  r = !git f && git stash && git reset --hard origin/$(git branch --show-current)
  lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(auto)%d%C(reset)%C(normal)%s%C(reset) %C(dim white)- %C(white)%as (%ar) %cn%C(reset)%n' --date-order
  topic = "!git f && for topic in $(seq -f \"topic%.0f\" 0 9); do echo $topic $(git branch -r | grep -i $topic ); done"
[merge]
    tool = nvimdiff
[mergetool]
	keepBackup = false

